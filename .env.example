# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration (GENERATE SECURE VALUES IN PRODUCTION!)
SECRET_KEY=generate-a-secure-secret-key-here
JWT_SECRET_KEY=generate-a-secure-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=development
DEBUG=true

# API Keys (Set actual values in production)
OPENAI_API_KEY=your_openai_api_key_here

# Job Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_MINUTES=60
SCRAPING_MAX_JOBS_PER_RUN=200
SCRAPING_CONCURRENT_REQUESTS=5
SCRAPING_DELAY_BETWEEN_REQUESTS=2

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Job Sources Configuration
ENABLE_REMOTEOK=true
ENABLE_YCOMBINATOR=true
ENABLE_GITHUB_JOBS=false
ENABLE_STACKOVERFLOW_JOBS=false
ENABLE_WELLFOUND=true
ENABLE_OTTA=true

# External API Keys (Optional - set actual values if needed)
REMOTEOK_API_KEY=
WELLFOUND_API_KEY=
OTTA_API_KEY=

# Proxy Configuration
USE_PROXY_ROTATION=false
PROXY_LIST=

# User Agent Rotation
USE_USER_AGENT_ROTATION=true

# Error Handling & Monitoring
ENABLE_ERROR_NOTIFICATIONS=false
ERROR_NOTIFICATION_EMAIL=
SLACK_WEBHOOK_URL=

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
SENTRY_DSN=

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# File Upload Settings
MAX_RESUME_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=