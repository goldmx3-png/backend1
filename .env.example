# Database Configuration
# For local development, use the docker-compose database
DATABASE_URL=postgresql://jobright:password@localhost:5432/jobright_db
# For Railway deployment, this will be set automatically by Railway

# Redis Configuration (for caching and queues)
# For local development
REDIS_URL=redis://localhost:6379/0
# For Railway deployment, this will be set automatically by Railway

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=development
DEBUG=true

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Job Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_MINUTES=60
SCRAPING_MAX_JOBS_PER_RUN=200
SCRAPING_CONCURRENT_REQUESTS=5
SCRAPING_DELAY_BETWEEN_REQUESTS=2

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Job Sources Configuration
ENABLE_REMOTEOK=true
ENABLE_YCOMBINATOR=true
ENABLE_GITHUB_JOBS=false
ENABLE_STACKOVERFLOW_JOBS=false
ENABLE_WELLFOUND=true
ENABLE_OTTA=true

# External API Keys
REMOTEOK_API_KEY=optional_api_key
WELLFOUND_API_KEY=optional_api_key
OTTA_API_KEY=optional_api_key

# Proxy Configuration (for production scraping)
USE_PROXY_ROTATION=false
PROXY_LIST=proxy1:port:user:pass,proxy2:port:user:pass

# User Agent Rotation
USE_USER_AGENT_ROTATION=true

# Error Handling & Monitoring
ENABLE_ERROR_NOTIFICATIONS=true
ERROR_NOTIFICATION_EMAIL=admin@jobright.ai
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=your_sentry_dsn

# Application Settings
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Settings
MAX_RESUME_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password